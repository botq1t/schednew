<!DOCTYPE html>
<html lang="ru">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Schednew</title>
	<link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon">
	<link rel="stylesheet" href="css/style.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="js/colorschemes.js"></script>
</head>

<body>
	<div class="wrapper">
		<section class="info">
			<div class="info__countdown">До конца семестра: 102 д., 06:02:15</div>
			<div class="info__week">Неделя №5 (СР)</div>
			<div class="info__time">16:26:17</div>

			<div class="info__toggler"></div>
		</section>
		<header class="header">
			<div class="header__body">
				<h1 class="header__title">Расписанька</h1>
				<section class="header__remain remain">
					<div class="remain__time"></div>
					<div class="remain__countdown"></div>
				</section>
				<section class="header__parity"></section>

			</div>
		</header>

		<main class="main">
			<nav class="main__nav-v nav-v">
				<section class="nav-v__body">
					<ul class="nav-v__content">
						<il class="nav-v__tab" id="nav-v_schedule"><span class="icon-bells"></span></il>
						<il class="nav-v__tab" id="nav-v_hours"><span class="icon-clock"></span></il>
					</ul>

					<ul class="nav-v__settings">
						<il class="nav-v__tab" id="nav-v_settings"><span class="icon-prefs"></span></il>
					</ul>
				</section>
			</nav>

			<div class="main__content">
				<div id="nav-v_schedule-target" class="main__schedule schedule">
					<section class="nav-h_117-target schedule__group"></section>
					<section class="nav-h_217-target schedule__group"></section>
				</div>

				<div id="nav-v_hours-target" class="main__hours hours">
					<section class="nav-h_117-target hours__group">

					</section>
					<section class="nav-h_217-target hours__group"></section>

				</div>

				<div id="nav-v_settings-target" class="main__settings settings">
					<!-- <section class="settings__block">
						<h1 class="settings__title">Внешний вид</h1>
						<main class="settings__body">
							<div class="settings__item">
								<h2 class="settings__description">Тема</h2>
								<select name="colorScheme" class="settings__value">
									<option value="light">Светлая</option>
									<option value="dark">Тёмная</option>
								</select>
							</div>
						</main>
					</section> -->

					<section class="settings__block">
						<h1 class="settings__title">Остальное</h1>
						<main class="settings__body">
							<div class="settings__item">
								<h2 class="settings__description">Группа</h2>
								<select name="group" class="settings__value">
									<option value="117">117</option>
									<option value="217">217</option>
								</select>
							</div>

							<!-- <div class="settings__item">
								<h2 class="settings__description">Звуки</h2>
								<select name="isSounds" class="settings__value">
									<option value="true">Надо</option>
									<option value="false">Не надо</option>
								</select>
							</div>

							<div class="settings__item">
								<h2 class="settings__description">Реклама</h2>
								<select name="isAds" class="settings__value">
									<option value="true">Надо</option>
									<option value="false">Не надо</option>
								</select>
							</div> -->
						</main>
					</section>

					<section class="settings__accept">Применить</section>
				</div>
			</div>
		</main>

		<footer class="footer">
			<div class="footer__body">
				<nav class="footer__nav-h nav-h">
					<ul class="nav-h__body">
						<il class="nav-h__tab" id="nav-h_117">У117</il>
						<il class="nav-h__tab" id="nav-h_217">У217</il>
					</ul>
				</nav>
			</div>
		</footer>
	</div>

	<script type="module" src="js/main.js"></script>
</body>

</html>